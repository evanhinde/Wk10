<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wk10.SearchController">
   <children>
      <HBox alignment="CENTER" layoutX="68.0" layoutY="68.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <TextField fx:id="searchTextField" promptText="Search movie name" />
                        <Button mnemonicParsing="false" onAction="#showMovies" text="Search" />
                     </children>
                  </HBox>
                  <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
                  <Label fx:id="errorLabel" text="Label" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <ImageView fx:id="imageView" fitHeight="242.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="getDetailsButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#getDetailsButton_onClick" text="Get Details" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
